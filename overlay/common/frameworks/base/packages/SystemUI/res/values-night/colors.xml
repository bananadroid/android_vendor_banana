<resources>
    <!-- Notifications -->    

    <!-- The color of the material notification background -->
    <color name="notification_material_background_color">#ff212121</color>
    <!-- The color of the legacy notifications with customs backgrounds (gingerbread and lollipop.)
    It's fine to override this color since at that point the shade was dark. -->
    <color name="notification_legacy_background_color">#ff212121</color>
    <!-- The background color of the notification shade -->
    <color name="notification_shade_background_color">#FF484848</color>
    <!-- The color of the material notification background when dimmed -->
    <color name="notification_material_background_dimmed_color">#FF212121</color>

    <!-- Qs customizer -->
    <!-- The color of the background in the top part of QSCustomizer -->
    <color name="qs_customize_background">#ff212121</color>
    <!-- The color of the background in the bottom part of QSCustomizer -->
    <color name="qs_customize_decoration">@*android:color/background_floating_material_dark</color>

    <color name="control_default_background">@*android:color/primary_device_default_settings</color>
    <color name="control_dialog_background">@*android:color/primary_device_default_settings</color>
    <color name="control_list_popup_background">@*android:color/primary_device_default_settings</color>

    <!-- Biometric dialog colors -->
    <color name="biometric_dialog_accent">@*android:color/accent_device_default_light</color>

</resources>
